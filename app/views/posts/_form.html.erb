<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :facebook_id %>
    <%= f.input :content %>
    <%= f.input :share_count %>
    <%= f.input :like_count %>
    <%= f.input :comment_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
