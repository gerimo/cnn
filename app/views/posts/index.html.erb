<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<table class="table table-striped post-table">
  <thead>
    <tr class="header">
      <th><%= sortable "facebook_id" %></th>
      <th><%= sortable "content" %></th>
      <th><%= sortable "share_count" %></th>
      <th><%= sortable "like_count" %></th>
      <th><%= sortable "comment_count" %> </th>
      <th><%= sortable "created_at" %> </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.facebook_id %></td>
        <td><%= post.content %></td>
        <td><%= post.share_count %></td>
        <td><%= post.like_count %></td>
        <td><%= post.comment_count %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts , renderer: BootstrapPagination::Rails  %>
<br>

<%= link_to 'New Post', new_post_path %>
