<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-striped post-table">
  <thead>
    <tr>
      <th data-sort = "string"> Facebook </th>
      <th data-sort = "string"> Content </th>
      <th data-sort = "int"> Share count </th>
      <th data-sort = "int"> Like count</th>
      <th data-sort = "int">Comment count</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.facebook_id %></td>
        <td><%= post.content %></td>
        <td><%= post.share_count %></td>
        <td><%= post.like_count %></td>
        <td><%= post.comment_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
