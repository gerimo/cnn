<%= simple_form_for(@fanpage) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :facebook_number %>
    <%= f.input :category_id, as: :select, collection: Category.all, input_html: { value: f.object.try(:category_id) } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
