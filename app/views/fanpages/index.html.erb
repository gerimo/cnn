<p id="notice"><%= notice %></p>
<h1>FanPage</h1>
<table class="table table-striped fanpage-table">
  <thead>
    <tr class="header">
      <th><%= sortable "name" %></th>
      <th><%= sortable "facebook_number" %></th>
      <th><%= sortable "category_id" %></th>
      <th><%= sortable "created_at" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @fanpages.each do |fanpage| %>
      <tr>
        <td><%= link_to fanpage.name, posts_path(fanpage_id: fanpage.id), target: '_blank' %></td>
        <td><%= fanpage.facebook_number %></td>
        <td><%= fanpage.category.try(:name) %></td>
        <td><%= fanpage.created_at %></td>
        <td><%= link_to 'Edit', edit_fanpage_path(fanpage) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @fanpages , renderer: BootstrapPagination::Rails  %>
<br>

<%= link_to 'New Post', new_fanpage_path %>
